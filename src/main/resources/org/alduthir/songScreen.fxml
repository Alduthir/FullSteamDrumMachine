<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?scenebuilder-stylesheet styles.css?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.Separator?>
<GridPane maxHeight="Infinity" maxWidth="Infinity" minHeight="400" minWidth="800"
          xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.alduthir.SongController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" styleClass="song-pane">
        <JFXButton fx:id="addSongButton" alignment="TOP_LEFT" styleClass="small-button">
            <graphic>
                <FontIcon iconLiteral="fa-plus" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXListView fx:id="songList" minHeight="300"/>
    </VBox>
    <BorderPane>
        <right>
            <VBox alignment="TOP_RIGHT" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"
                  GridPane.vgrow="ALWAYS" styleClass="button-box">
                <JFXButton fx:id="playButton" onAction="#switchToSecondary" buttonType="FLAT"
                           styleClass="menu-button" text="Play">
                    <graphic>
                        <FontIcon iconLiteral="fa-play" iconSize="40" iconColor="white"/>
                    </graphic>
                </JFXButton>
                <Separator/>
                <JFXButton fx:id="editButton" text="Edit" onAction="#switchToSecondary" buttonType="FLAT"
                           styleClass="menu-button">
                    <graphic>
                        <FontIcon iconLiteral="fa-edit" iconSize="40" iconColor="white"/>
                    </graphic>
                </JFXButton>
                <Separator/>
                <JFXButton fx:id="exportButton" text="Export" onAction="#switchToSecondary" buttonType="FLAT"
                           styleClass="menu-button">
                    <graphic>
                        <FontIcon iconLiteral="fa-external-link" iconSize="40" iconColor="white"/>
                    </graphic>
                </JFXButton>
                <Separator/>
                <JFXButton fx:id="deleteButton" text="Delete" onAction="#switchToSecondary" buttonType="FLAT"
                           styleClass="menu-button">
                    <graphic>
                        <FontIcon iconLiteral="fa-trash" iconSize="40" iconColor="white"/>
                    </graphic>
                </JFXButton>
            </VBox>
        </right>
    </BorderPane>
</GridPane>